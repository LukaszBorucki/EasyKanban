<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/message_single_row"
    tools:context="co.borucki.easykanban.view.IncomingMessageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/incoming_message_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/incoming_message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="4"
            android:gravity="end"
            android:textColor="#999999"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#999999"
            android:gravity="center"
            android:text="@string/incoming_message_subject"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/incoming_message_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:maxLines="1"
            android:textColor="#000" />

    </LinearLayout>

    <TextView
        android:id="@+id/incoming_message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3" />

</LinearLayout>
