<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="horizontal">

    <ImageView
        android:contentDescription="product_photo"
        android:padding="5dp"
        android:id="@+id/scanned_product_circle_image"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/scanned_product_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/scanned_product_circle_image"
        android:layout_toStartOf="@+id/scanned_product_delete" />

    <TextView
        android:id="@+id/scanned_product_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanned_product_date"
        android:layout_toEndOf="@+id/scanned_product_circle_image"
        android:layout_toStartOf="@+id/scanned_product_delete" />

    <TextView
        android:id="@+id/scanned_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanned_product_code"
        android:layout_toEndOf="@+id/scanned_product_circle_image"
        android:layout_toStartOf="@+id/scanned_product_delete" />

    <ImageView
        android:id="@+id/scanned_product_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/scanned_product_single_row_trash"
        android:src="@drawable/ic_delete_black_24dp" />
</RelativeLayout>