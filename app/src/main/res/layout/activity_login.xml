<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:context="co.borucki.easykanban.view.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/login_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:titleTextColor="#FFFFFF" />

    <Spinner
        android:layout_marginTop="16dp"
        android:id="@+id/login_activity_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="15dp"

        />

    <Space
        android:layout_width="0dp"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_first_digit"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/edittext_border"

            android:cursorVisible="true"

            android:gravity="center"
            android:inputType="numberPassword"
            android:labelFor="@+id/login_first_digit"
            android:maxLength="1"
            android:textSize="23sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/login_second_digit"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/edittext_border"
            android:cursorVisible="true"
            android:gravity="center"
            android:inputType="numberPassword"
            android:labelFor="@+id/login_second_digit"
            android:maxLength="1"
            android:textSize="23sp"

            />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/login_third_digit"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/edittext_border"
            android:cursorVisible="true"
            android:gravity="center"
            android:inputType="numberPassword"
            android:labelFor="@+id/login_third_digit"
            android:maxLength="1"
            android:textSize="23sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/login_fourth_digit"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/edittext_border"
            android:cursorVisible="true"
            android:gravity="center"
            android:inputType="numberPassword"
            android:labelFor="@+id/login_fourth_digit"
            android:maxLength="1"
            android:textSize="23sp" />

    </LinearLayout>
</LinearLayout>
