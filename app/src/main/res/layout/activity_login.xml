<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="co.borucki.easykanban.view.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/login_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <Spinner
        android:id="@+id/login_activity_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/login_tool_bar"
        android:scrollbarSize="15dp" />

    <Space
        android:id="@+id/space2"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_below="@+id/login_activity_spinner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:translationZ="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/login_button_digit_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1" />

            <Button
                android:id="@+id/login_button_digit_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="2" />

            <Button
                android:id="@+id/login_button_digit_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/login_button_digit_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="4" />

            <Button
                android:id="@+id/login_button_digit_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="5" />

            <Button
                android:id="@+id/login_button_digit_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/login_button_digit_7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="7" />

            <Button
                android:id="@+id/login_button_digit_8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="8" />

            <Button
                android:id="@+id/login_button_digit_9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/login_button_digit_0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="0" />

            <Button
                android:id="@+id/login_button_digit_clear"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:text="Clear" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/login_layout_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/custom_logo"
        android:src="@drawable/splash_logo"
        android:translationZ="1dp" />

    <TextView
        android:id="@+id/login_activity_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/space2"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="@string/application_author" />
</RelativeLayout>
