<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="co.borucki.easykanban.view.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/login_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <Spinner
        android:id="@+id/login_activity_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/login_tool_bar"
        android:scrollbarSize="15dp" />

    <Space
        android:id="@+id/space2"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_below="@+id/login_activity_spinner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space2"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_first_digit"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/edittext_border"

            android:cursorVisible="true"

            android:gravity="center"
            android:inputType="numberPassword"
            android:labelFor="@+id/login_first_digit"
            android:maxLength="1"
            android:textSize="23sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/login_second_digit"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/edittext_border"
            android:cursorVisible="true"
            android:gravity="center"
            android:inputType="numberPassword"
            android:labelFor="@+id/login_second_digit"
            android:maxLength="1"
            android:textSize="23sp"

            />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/login_third_digit"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/edittext_border"
            android:cursorVisible="true"
            android:gravity="center"
            android:inputType="numberPassword"
            android:labelFor="@+id/login_third_digit"
            android:maxLength="1"
            android:textSize="23sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/login_fourth_digit"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:background="@drawable/edittext_border"
            android:cursorVisible="true"
            android:gravity="center"
            android:inputType="numberPassword"
            android:labelFor="@+id/login_fourth_digit"
            android:maxLength="1"
            android:textSize="23sp" />

    </LinearLayout>

    <ImageView
        android:contentDescription="@string/custom_logo"
        android:id="@+id/login_layout_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/splash_logo" />

    <TextView
        android:id="@+id/login_activity_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/space2"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="@string/application_author" />
</RelativeLayout>
